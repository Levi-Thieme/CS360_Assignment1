package controllers;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.table.DefaultTableModel;
import javax.swing.table.TableModel;

import models.Database;
import models.Watershed;
import views.DatabaseView;


/**
 * The TableController handles actions generated by the 
 * DatabaseView.
 * @author Levi Thieme
 *
 */
public class TableController implements ActionListener{
	Database db;
	DatabaseView dbView;
	
	/**
	 * Creates a TableController and instantiates a Database Object
	 * @param filename The name of the file storing Watershed Objects
	 */
	public TableController(String filename) {
		db = new Database();
		//read in Watershed objects and instantiate Database, use Database to instantiate the TableModel in DatabaseView
		dbView = new DatabaseView(null, db.getColumnNames());
		
		
		
		/*
		dbView.getBtnAddEntry().addActionListener(this);
		dbView.getBtnRemoveEntry().addActionListener(this);
		dbView.getBtnSave().addActionListener(this);
		*/
	}
	
	
	
	
	@Override
	public void actionPerformed(ActionEvent e) {
		
		if(e.getActionCommand().equals("Save")) {
			
		}
		else if(e.getActionCommand().equals("Add Entry")) {
			DefaultTableModel tableModel = (DefaultTableModel)dbView.getTable().getModel();
			
			//Create an Add JFrame and get user input to initialize the WaterShed Object
			
			System.out.println("Adding a row!");
			
			
			
			
			//Watershed newWaterS = new WaterShed(int id, String n, String location_description, double lat, double longitude);
			tableModel.addRow(new Object[db.getColumns()]);
			
		}
		else if(e.getActionCommand().equals("Remove Entry")) {
			
		}
		else if(e.getActionCommand().equals("Edit")) {
			
		}
		else if(e.getActionCommand().equals("Exit")) {
			//save and close the dbView (dbView.dispose);
		}
		
	}
	
}	
